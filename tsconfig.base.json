{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    
    "module": "esnext",
    "moduleResolution": "node",
    "moduleDetection": "force",

    "strict": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "allowJs": true
  }
}