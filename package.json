{
  "name": "galosity",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "grammar": "npx pegjs -o grammar.cjs grammar.pegjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Lite Pure-Text Galgame Editor",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.12.0",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.27.0",
    "eslint-plugin-no-floating-promise": "^2.0.0",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.1.0"
  },
  "build": {
    "appId": "galosity.zz_404",
    "productName": "Galosity",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!example.txt",
      "!gal.txt",
      "!README.md",
      "!LICENSE.txt",
      "!sum.txt",
      "!eslint.config.js",
      "!src",
      "!save",
      "!import-test.txt"
    ],
    "extraFiles": [
      "example.txt",
      "src",
      "save"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "pegjs": "^0.10.0"
  }
}
